{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2015.Iterable",
      "esnext"
    ],
    "rootDir": "",
    "baseUrl": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "downlevelIteration": true,
    "checkJs": false,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src",
    "scripts",
    "@types"
  ]
}
